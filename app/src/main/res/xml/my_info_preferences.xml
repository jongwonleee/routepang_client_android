<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
        app:iconSpaceReserved="false">

    <PreferenceCategory
            app:iconSpaceReserved="false"
            app:title="개인정보">

        <Preference
                app:key="info_profile"
                app:iconSpaceReserved="false"
                app:title="프로필 변경"/>
        <Preference
                app:key="info_email"
                app:iconSpaceReserved="false"
                app:title="이메일 변경" />
        <Preference
                app:key="info_password"
                app:iconSpaceReserved="false"
                app:title="비밀번호 변경"/>


    </PreferenceCategory>

    <PreferenceCategory
            app:iconSpaceReserved="false"
            app:title="보안">

        <SwitchPreference
                app:key="secure_hide"
                app:iconSpaceReserved="false"
                app:title="건의사항"/>
        <Preference
                app:key="secure_password"
                app:iconSpaceReserved="false"
                app:title="개인정보보호법" />
        <Preference
                app:key="null" />
        <Preference
                app:key="secure_quit"
                app:iconSpaceReserved="false"
                app:title="회원탈퇴" />

    </PreferenceCategory>

</PreferenceScreen>
