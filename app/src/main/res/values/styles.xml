<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/notosanscjkkr_regular</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">#333333</item>
        <item name="android:windowAnimationStyle">@style/Animation.TranslateAnimation</item>
    </style>

    <style name="NavigationText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/notosanscjkkr_regular</item>
        <item name="android:textColor">#333333</item>
    </style>

    <style name="tabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/notosanscjkkr_medium</item>
    </style>
    <style name="tabTextSmall" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/notosanscjkkr_medium</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="Animation"/>
    <style name="Animation.TranslateAnimation" parent="android:Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/translate_in_from_right</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@anim/translate_out_to_right</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
