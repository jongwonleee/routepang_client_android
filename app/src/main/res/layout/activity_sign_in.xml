<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".landingpage.SignInActivity">

    <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="86dp"
            android:textColor="#333333"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:text="회원가입"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <com.itaewonproject.customviews.ClearEditText
            android:id="@+id/edit_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="39dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/box_grey_radius_5dp"
            android:ems="10"
            android:fontFamily="@font/notosanscjkkr_regular"
            android:hint="ID"
            android:inputType="textEmailAddress"
            android:paddingLeft="20dp"
            android:text="adminadmin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

    <com.itaewonproject.customviews.ClearEditText
            android:id="@+id/edit_email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/box_grey_radius_5dp"
            android:ems="10"
            android:fontFamily="@font/notosanscjkkr_regular"
            android:hint="E-Mail"
            android:inputType="textEmailAddress"
            android:paddingLeft="20dp"
            android:text="adminadmin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_id" />

    <com.itaewonproject.customviews.ClearEditText
            android:id="@+id/edit_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:background="@drawable/box_grey_radius_5dp"
            android:ems="10"
            android:fontFamily="@font/notosanscjkkr_regular"
            android:hint="password"
            android:inputType="textPassword"
            android:paddingLeft="20dp"
            android:text="adminadmin"
            app:layout_constraintEnd_toEndOf="@+id/edit_id"
            app:layout_constraintStart_toStartOf="@+id/edit_id"
            app:layout_constraintTop_toBottomOf="@+id/edit_email" />

    <com.itaewonproject.customviews.ClearEditText
            android:id="@+id/edit_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:background="@drawable/box_grey_radius_5dp"
            android:ems="10"
            android:hint="이름"
            android:inputType="textPersonName"
            android:paddingLeft="20dp"
            android:text="adminadmin"
            android:fontFamily="@font/notosanscjkkr_regular"
            app:layout_constraintEnd_toEndOf="@+id/edit_id"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/edit_id"
            app:layout_constraintTop_toBottomOf="@+id/edit_password_check" />

    <com.itaewonproject.customviews.ClearEditText
            android:id="@+id/edit_password_check"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:background="@drawable/box_grey_radius_5dp"
            android:ems="10"
            android:hint="password 확인"
            android:inputType="textPassword"
            android:paddingLeft="20dp"
            android:text="adminadmin"
            android:fontFamily="@font/notosanscjkkr_regular"
            app:layout_constraintEnd_toEndOf="@+id/edit_id"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/edit_id"
            app:layout_constraintTop_toBottomOf="@+id/edit_password" />

    <Button
            android:id="@+id/button_link_share"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/box_darkgrey_radius_5dp"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:textSize="16sp"
            android:text="회원가입"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="@+id/edit_password"
            app:layout_constraintStart_toStartOf="@+id/edit_password"
            app:layout_constraintTop_toBottomOf="@+id/edit_name" />
</androidx.constraintlayout.widget.ConstraintLayout>