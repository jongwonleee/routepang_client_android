<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".landingpage.SignInActivity">

    <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/notosanscjkkr_regular"
            android:text="아이디 찾기"
            app:layout_constraintStart_toStartOf="@+id/edit_id"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/notosanscjkkr_regular"
            android:text="비밀번호 찾기"
            app:layout_constraintStart_toStartOf="@+id/edit_id"
            app:layout_constraintTop_toBottomOf="@+id/button_create" />

    <Button
            android:id="@+id/button_create2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:background="@drawable/login_box_darkgrey"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:text="해당 이메일로 임시 비밀번호 발송"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/edit_password"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/edit_password"
            app:layout_constraintTop_toBottomOf="@+id/edit_password_check" />

    <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="86dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/notosanscjkkr_bold"
            android:text="아이디 / 비밀번호 찾기"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="#333333"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <com.itaewonproject.ClearEditText
            android:id="@+id/edit_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/login_box_grey"
            android:ems="10"
            android:fontFamily="@font/notosanscjkkr_regular"
            android:hint="가입된 이메일"
            android:inputType="textEmailAddress"
            android:paddingLeft="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <com.itaewonproject.ClearEditText
            android:id="@+id/edit_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/login_box_grey"
            android:ems="10"
            android:fontFamily="@font/notosanscjkkr_regular"
            android:hint="가입된 이메일"
            android:inputType="textPassword"
            android:paddingLeft="20dp"
            app:layout_constraintEnd_toEndOf="@+id/edit_id"
            app:layout_constraintStart_toStartOf="@+id/edit_id"
            app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <com.itaewonproject.ClearEditText
            android:id="@+id/edit_password_check"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:background="@drawable/login_box_grey"
            android:ems="10"
            android:fontFamily="@font/notosanscjkkr_regular"
            android:hint="ID"
            android:inputType="textPassword"
            android:paddingLeft="20dp"
            app:layout_constraintEnd_toEndOf="@+id/edit_id"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/edit_id"
            app:layout_constraintTop_toBottomOf="@+id/edit_password" />

    <Button
            android:id="@+id/button_create"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:background="@drawable/login_box_darkgrey"
            android:fontFamily="@font/notosanscjkkr_medium"
            android:text="해당 이메일로 아이디 발송"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/edit_password"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/edit_password"
            app:layout_constraintTop_toBottomOf="@+id/edit_id" />
</androidx.constraintlayout.widget.ConstraintLayout>